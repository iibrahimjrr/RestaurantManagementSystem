{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=RestaurantManagementDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Jwt": {
    "Issuer": "RestaurantManagementSystem",
    "Audience": "RestaurantManagementSystemUsers",
    "Key": "YourSuperSecretKeyForJwtTokenGeneration123!"
